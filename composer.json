{
    "name": "roave/backward-compatibility-check",
    "description": "Tool to compare two revisions of a public API to check for BC breaks",
    "require": {
        "php": "~8.0.0 || ~8.1.0",
        "ext-json": "*",
        "azjezz/psl": "^1.9.3",
        "composer/composer": "^2.3.7",
        "nikolaposa/version": "^4.1.0",
        "ocramius/package-versions": "^2.5.1",
        "roave/better-reflection": "^5.4.0",
        "symfony/console": "^6.0.8"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "James Titcumb",
            "email": "james@asgrim.com"
        },
        {
            "name": "Marco Pivetta",
            "email": "ocramius@gmail.com"
        }
    ],
    "require-dev": {
        "doctrine/coding-standard": "^9.0.0",
        "php-standard-library/psalm-plugin": "^1.1.5",
        "phpunit/phpunit": "^9.5.20",
        "psalm/plugin-phpunit": "^0.16.1",
        "roave/infection-static-analysis-plugin": "^1.19",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6.2",
        "vimeo/psalm": "^4.23.0"
    },
    "conflict": {
        "symfony/process": "<5.3.7"
    },
    "autoload": {
        "psr-4": {
            "Roave\\BackwardCompatibility\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RoaveTest\\BackwardCompatibility\\": "test/unit"
        }
    },
    "bin": [
        "bin/roave-backward-compatibility-check"
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.99"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    }
}
